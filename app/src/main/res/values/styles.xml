<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mc_orange</item>
        <item name="android:fontFamily">@font/samsungsans</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
        <item name="behavior_peekHeight">1550dp</item>
        <item name="behavior_hideable">false</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_round_corner</item>
        <item name="android:color">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button.grey" parent="button">
        <item name="android:background">@drawable/btn_round_corner_grey</item>
    </style>

    <style name="TextButton">
        <item name="android:fontFamily">@font/samsungsharpsans</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">30sp</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginVertical">@dimen/margin_vertical</item>
        <item name="android:background">#aaffffff</item>

    </style>

    <style name="defaultText">
        <item name="android:textColor">#222</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/txt_round_corner</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LockScreenTheme" parent="AppTheme">
        <item name="android:color">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="buttonStyle">@style/button</item>
    </style>

    <style name="textTitle">
        <item name="android:fontFamily">@font/samsungsharpsans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#222</item>
    </style>

    <style name="itemLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#777</item>
    </style>
    <style name="itemText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#222</item>
    </style>

    <style name="textHeader" >
        <item name="android:fontFamily">@font/samsungsharpsans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textHeader2" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/samsungsharpsans</item>
        <item name="android:textColor">#034EA2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="homeScreenHeader" parent="defaultText">
        <item name="android:fontFamily">@font/samsungsharpsans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">36dp</item>
    </style>

    <style name="homeScreenContractDetails">
        <item name="android:fontFamily">@font/samsungsans</item>
        <item name="android:textColor">#222</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="homeScreenProgressBarDays" parent="defaultText">
        <item name="android:fontFamily">@font/samsungsharpsans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="homeScreenProgressBar" parent="defaultText">
        <item name="android:fontFamily">@font/samsungsharpsans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="homeScreenViewContractInfo">
        <item name="android:fontFamily">@font/samsungsans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
    </style>
</resources>
